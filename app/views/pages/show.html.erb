<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @page.title %>
</p>

<p>
  <b>Slug:</b>
  <%= @page.slug %>
</p>

<p>
  <b>Content:</b>
  <%= @page.context %>
</p>
<p>
  <% if @page.excerpt_image? %>
    <%= image_tag @page.excerpt_image.url(:medium) %>
  <% end %>
<% if current_user && current_user.is_admin? %>
  <%= link_to 'Edit', edit_admin_page_path(@page) %> |
<% end %>
